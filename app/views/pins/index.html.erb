<h4>Listing of Pins <%= link_to 'New Pin', new_pin_path, class: "center" %></h4>

  
  <div id="pins" class="transitions-enabled infinite-scroll clearfix">
    <% @pins.each do |pin| %>

        <div class="box">
            <%= link_to image_tag(pin.image.url(:medium)), pin %><br>
            <%= pin.description %> <br>
            posted by: <%= pin.user.name if pin.user %><br>
            <% if pin.user == current_user %>    
                <!--<%= link_to 'Show', pin %>-->
                <%= link_to 'Edit', edit_pin_path(pin) %> | 
                <%= link_to 'Delete', pin, method: :delete, data: { confirm: 'Are you sure?' } %><br>
            <% end %>
            <br>
            </div>
    <% end %>
    
</div>























